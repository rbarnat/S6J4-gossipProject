
<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">

      <div class="col-md-8">
        <div class="card mb-4 box-shadow">
          <!--<img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">-->
          <div class="card-body">
            <small class="text-muted">#<%= @city.id %></small>
            <h3 class="card-title"><%= @city.name %></h5>
            <h5 class="card-title">Code postal : <%= @city.zip_code %></h5>
          </div>
        </div>
      </div>
      
    </div>

    <div class="text-left">
      <a href="<%= gossips_path %>" class="btn my-2 btn-outline-secondary">Retour aux potins</a>
    </div>

  </div>
</div>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">

      <% @city.users.each do |user| %>
        <% user.gossips.each do |gossip| %>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <!--<img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">-->
              <div class="card-body">
                <h5 class="card-title"><%= gossip.title %></h5>
                <p class="card-text"><%= gossip.content %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a href="<%= gossip_path(gossip.id) %>" class="btn btn-sm btn-outline-secondary">Voir</a>
                    <% if logged_in? && current_user.id == gossip.user.id %>
                      <a href="<%= edit_gossip_path(gossip.id) %>" class="btn btn-sm btn-outline-secondary">Modifier</a>
                    <% end %>
                  </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <a href="<%= city_path(gossip.user.city.id) %>"><small  class="text">üè†<%= gossip.user.city.name %></small></a>
                  <a href="<%= user_path(gossip.user.id) %>"><small  class="text-muted">üôÉ<%= gossip.user.first_name + ' ' + gossip.user.last_name %></small></a>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
      
      
    </div>
  </div>
</div>
